@model UsuarioModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Editar Usuario
  </div>
  <div class="card-body">
    

      <form asp-action="Editar" asp-controller="Usuarios" method="post">

          <input asp-for="Id" type="hidden" class="form-control">
          <div class="mb-3">
              <label class="form-label">Nombre</label>
              <input asp-for="Nombre" type="text" class="form-control">
              <span asp-validation-for="Nombre" class="text-danger"></span>
          </div>
          <div class="mb-3">
              <label class="form-label">Fecha de Creacion</label>
              <input asp-for="FechaCreacion" type="datetime" class="form-control">
              <span asp-validation-for="FechaCreacion" class="text-danger"></span>
          </div>

          <div class="mb-3">
              <label class="form-label">Usuario</label>
              <input asp-for="Usuario" type="text" class="form-control">
              <span asp-validation-for="Usuario" class="text-danger"></span>
          </div>
          <div class="mb-3">
              <label class="form-label">Password</label>
              <input asp-for="Password" type="text" class="form-control">
              <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="mb-3">
              <label class="form-label">Estatus</label>
              <select class="form-control" name="IdEstatus" runat="server" id="IdEstatus" asp-for="IdEstatus">
                  <option value="1">Activo</option>
                  <option value="0">InActivo</option>
              </select>
          </div>
          <button type="submit" class="btn btn-primary">Guardar</button>
          <a asp-action="Listar" asp-controller="Usuarios" class="btn btn-warning">Volver a la lista</a>
      </form>


  </div>
</div>

